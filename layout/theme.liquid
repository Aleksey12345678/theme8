<!doctype html>
<html>
  <head>
    {{ content_for_header }}
    <style>
      {{settings.heading_font| font_face}}
       :root{
         {% if settings.heading_font.family != "Helvetica" %}
         --heading_font:{{settings.heading_font.family}}
          {% else %}
             --heading_font:{{'Alata'}}
          {% endif %};

          {% if settings.body_font.family != "Helvetica" %}
         --body_font:{{settings.body_font.family}}
          {% else %}
             --body_font:{{'Sofia Pro'}}
          {% endif %}

       }
    </style>
    {{ 'sectionCommonCss.css' | asset_url | stylesheet_tag }}
  </head>
  <body>
    {% section 'sectionHeader' %}
    {{ content_for_layout }}
    {% section 'sectionFooter' %}
  </body>
</html>
