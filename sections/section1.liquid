<div class="section">
  <div class="section__container firstSection__container">
    <div class="section__inner firstSection__inner">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'heading' %}
            <div class="firstSection__titleDiv">
              {% if block.settings.heading.size == 0 %}
                <h1 class="firstSection__title H1Font">Marvel Power Group</h1>
              {% else %}
                <h1 class="firstSection__title H1Font">{{ block.settings.heading }}</h1>
              {% endif %}
            </div>
          {% when 'text' %}
            {% if block.settings.text.size == 0 %}
              <p class="firstSection__text body1Font">
                Marvel Power Group is a woman-owned, ESG-focused transaction broker and commercial advisor. We offer
                services to clients in power, gas, water, industrial and transportation sectors.
              </p>
            {% else %}
              <p class="firstSection__text body1Font">{{ block.settings.text }}</p>
            {% endif %}
          {% when 'button' %}
            <div class="firstSection__btn">
              {% render 'contactButton' %}
              <button class="contactButton" type="submit">
                <div class="contactButtonInner buttonFont">
                  <div class="buttonText">
                    {% if block.settings.buttonText.size == 0 %}
                      <span>CONTACT US</span>
                    {% else %}
                      <span>{{ block.settings.buttonText }}</span>
                    {% endif %}
                  </div>
                  <div>
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="10" viewBox="0 0 20 10" fill="none">
                      <path fill-rule="evenodd" clip-rule="evenodd" d="M6 2.14286L8.46323 0L14 0V10H8.46323L6 7.85714V2.14286Z" fill="#0B0D21" />
                      <path d="M14 2H20V4H14V2Z" fill="#0B0D21" />
                      <path d="M14 6H20V8H14V6Z" fill="#0B0D21" />
                      <path d="M0 6L0 4H6V6H0Z" fill="#0B0D21" />
                      <path d="M8 6.5V3.5L9.33333 2H12V8H9.33333L8 6.5Z" fill="#F9D023" />
                    </svg>
                  </div>
                </div>
              </button>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .firstSection__container{
    {% if section.settings.image == blank %}
       background-image: url("{{ 'robert-bye-R-WtV-QyVnY-unsplash.png' | asset_url }}");
    {% else %}
      background-image: url('{{ section.settings.image| img_url: "master"  }}');
    {% endif %}
  }
</style>

{% schema %}
{
  "name": "Section- 1",
  "settings": [
     {
      "type":"image_picker",
      "id":"image",
      "label":"image"

    }
  ],
  "blocks":[
   { "type":"heading",
    "name":"Title-section1",
    "limit":3,
    "settings":[
      {
       "type":"inline_richtext",
        "id":"heading",
        "default":"Marvel Power Group",
        "label":"Background image"
      }
    ]
   },
    {
      "type":"text",
      "name":"Text-section1",
      "limit":3,
      "settings":[
        {
          "type":"inline_richtext",
          "id":"text",
          "default":" Marvel Power Group is a woman-owned, ESG-focused transaction broker and commercial advisor. We offer services to clients in power, gas, water, industrial and transportation sectors.",

          "label":"Support text"
        }
      ]

    },
    {
      "type":"button",
      "name":"Button-section1",
      "limit":3,
      "settings":[
        {
          "type":"inline_richtext",
          "id":"buttonText",
          "default":" send up",

          "label":"Button text"
      }
        ]
    }
  ],
  "presets":[
    {
      "name":"section1",
        "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "text"
        },
        {
          "type": "button"
        }
      ]
    }
  ]
}
{% endschema %}
